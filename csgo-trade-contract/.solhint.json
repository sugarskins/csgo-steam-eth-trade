{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "indent": ["error", 4],
    "quotes": ["error", "double"],
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "avoid-low-level-calls": "error",
    "compiler-version": ["warn", "^0.5.0"],
    "avoid-throw": false,
    "var-name-mixedcase": false,
    "mark-callable-contracts": false,
    "no-simple-event-func-name": false
  }
}
